{
  "compilerOptions": {
    "types": ["node", "react", "react-dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}